<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.image.Image?>
<VBox fx:id="vbox"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.DataView"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <ImageView fx:id="imageView">
        <Image url="/pictures/NoPreviewAvailable.png"/>
    </ImageView>

    <!--
    <TextArea fx:id="textArea" prefWidth="500" prefHeight="300"/>
    -->

    <Button fx:id="setFileButton" onAction="#setFileButtonAction" text="Set File"/>

    <GridPane hgap="5" vgap="10" alignment="CENTER">
        <HBox alignment="CENTER_RIGHT"
              GridPane.rowIndex="0" GridPane.columnIndex="0">
            <Label text="Description:"/>
        </HBox>
        <TextField fx:id="descriptionField"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <HBox alignment="CENTER_RIGHT"
              GridPane.rowIndex="1" GridPane.columnIndex="0">
            <Label text="Last modified:"/>
        </HBox>
        <DatePicker fx:id="datePicker" disable="true"
                    GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <HBox alignment="CENTER_RIGHT"
              GridPane.rowIndex="2" GridPane.columnIndex="0">
            <Label text="Type:"/>
        </HBox>
        <ComboBox fx:id="typeComboBox"
                GridPane.rowIndex="2" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="image"/>
                    <String fx:value="text"/>
                    <String fx:value="other"/>
                </FXCollections>
            </items>
            <value>
                <String fx:value="other"/>
            </value>
        </ComboBox>

        <HBox alignment="CENTER" spacing="10"
              GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2">
            <Button text="Download" defaultButton="true"/>
            <Button text="Remove"/>
            <Button onAction="#modifyButtonAction" text="Upload"/>
        </HBox>
    </GridPane>
</VBox>
