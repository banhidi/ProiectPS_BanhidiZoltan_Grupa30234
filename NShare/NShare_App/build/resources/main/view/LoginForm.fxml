<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane alignment="CENTER" hgap="10" vgap="10"
          xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="view.LoginView" prefWidth="300" prefHeight="300">
    <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
          alignment="CENTER">
        <ProgressIndicator fx:id="progressIndicator" visible="false"/>
    </HBox>

    <HBox GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER">
        <Label fx:id="errorLabel" text=""/>
    </HBox>

    <HBox GridPane.rowIndex="2" GridPane.columnIndex="0" alignment="CENTER_RIGHT">
        <Label text="Username:"/>
    </HBox>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <HBox GridPane.rowIndex="3" GridPane.columnIndex="0" alignment="CENTER_RIGHT">
        <Label text="Password:"/>
    </HBox>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <HBox GridPane.rowIndex="4" GridPane.columnIndex="0" GridPane.columnSpan="2" alignment="CENTER">
        <Button text="Login" defaultButton="true" onAction="#loginButtonAction"/>
    </HBox>
</GridPane>
